{# {% set plan_translations = plan.translated_properties[grav.language.getLanguage] %} #}
<div id="modular_pricing" class="pricing">
  <div class="pricing-content">

    <div class="price">
      <div class="type">
				<div class="type-wrap">{{ plan.name }}</div>
			</div>

      {# <p class="description">Descriptions</p> #}

      <div class="pricing-group">
        <span class="pricing-wrap">
           <div class="price text-primary-color">
              {% if plan.prices.0 %}
                <h1>{{ plan.prices.0.currency }}
                  {{ plan.prices.0.amount|number_format(0,'','') }}</h1>
              {% else %}
                <h1>
                  {{ plan.prices.0.currency }}
                  {{ plan.fallback_price_eur|number_format(0,'','') }}</h1>
              {% endif %}
            </div>
        </span>

        <span class="period">/
          {% if plan.interval_count == 1 %}
            {% if plan.interval == 'days' %}
              {{ 'METRICALO.DAY'|t }}
            {% elseif plan.interval == 'weeks' %}
              {{ 'METRICALO.WEEK'|t }}
            {% elseif plan.interval == 'months' %}
              {{ 'METRICALO.MONTH'|t }}
            {% elseif plan.interval == 'years' %}
              {{ "METRICALO.YEAR"|t }}
            {% endif %}
          {% else  %}
            {{ plan.interval_count }}
            {% if plan.interval == 'days' %}
              {{ 'METRICALO.DAYS'|t }}
            {% elseif plan.interval == 'weeks' %}
              {{ 'METRICALO.WEEKS'|t }}
            {% elseif plan.interval == 'months' %}
              {{ 'METRICALO.MONTHS'|t }}
            {% elseif plan.interval == 'years' %}
              {{ "METRICALO.YEARS"|t }}
            {% endif %}
          {% endif %}
        </span>
      </div>

      {% if plan.trial_days %}
        <p class="">{{ plan.trial_days }} {{ "METRICALO.TRIAL_DAYS"|t }}</p>
      {% endif %}
    </div>

    <div class="benefits">
			{% for benefit in plan.benefits %}
				<div class="benefit">
					<img class="check" src="{{ url('theme://images/check.svg') }}"/>
					<div class="streamline">{{ benefit|markdown(false) }}</div>
				</div>
			{% endfor %}
		</div>

  </div>
  <div class="">
    <a class="pricing-btn button" href="{{ url(plan.purchase_url) }}">{{ "METRICALO.SIGNUP"|t }}</a>
  </div>
</div>