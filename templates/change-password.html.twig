{% set body_classes = 'bg-gray-50' %}
{% extends 'partials/base.html.twig' %}

{% block content %}
  {% include 'partials/no-hero-header.html.twig' with {
    'title': page.header.title,
    'links': [
      {
        'url': '/' ~ grav.language.getActive,
        'title': "BSCOPE.LOGIN_HEADER_HOME"|t
      },
      {
        'url': url(grav.language.getActive ~ '/profile'),
        'title': "BSCOPE.BREADCRUMB_PROFILE"|t
      },
      {
        'title': "METRICALO.CHANGE_PASSWORD"|t
      }
    ]
  } %}

  <div class="content-section change-password-form slide-up animate">
    {% include 'forms/form.html.twig' with { form: forms('change-password'), action:  url(grav.language.getActive ~ '/profile/change-password') } %}
    <div class="form-actions">
      <button form="change-password" type="submit" class="button primary no-underline">
        {{ 'METRICALO.CHANGE_PASSWORD'|t }}
      </button>
    </div>
  </div>

{% endblock %}
